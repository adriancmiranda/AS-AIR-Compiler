	</icon>

	<!-- Whether the application can be launched when the user clicks a link in a web browser. Optional. Default false. -->
	<allowBrowserInvocation>false</allowBrowserInvocation>

	<!-- Whether the application handles the update when a user double-clicks an update version of the AIR file (true), or the default AIR application installer handles the update (false). Optional. Default false. -->
	<customUpdateUI>false</customUpdateUI>

	<!-- Listing of file types for which the application can register. Optional. -->
	<fileTypes>
		<!-- Defines one file type. Optional. -->
		<!-- <fileType> -->
			<!-- The name that the system displays for the registered file type. Required. -->
			<!-- <name></name> -->

			<!-- The extension to register. Required. -->
			<!-- <extension></extension> -->

